(define (nor . lst) "logical nor on multiple values" (fold (lambda (x y) (&& (not y) x))  #t lst))

(define-syntax and
  (syntax-rules ()
    ((and) #t)
    ((and x y) (if x y #f))
    ((and x y ...)
      (if x (and y ...) #f))))

(define-syntax or
  (syntax-rules ()
    ((or) #t)
    ((or x y) (if x x y))
    ((or x y ...)
      (if x x (or y ...)))))

(define (not x) "logical not" (if x #f #t))
